<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="nss.support.ashokas.nsslog.ACT_settings">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_settings"

        />

    <LinearLayout
        android:orientation="vertical"
        android:elevation="20dp"
       android:background="@drawable/bgdesn_main_bg"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="35dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="read API_KEY using QR scan"/>

        <TextView
            android:id="@+id/xml_api_iswork"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

        <TextView
            android:id="@+id/xml_txt_updateurl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/drw_curve_txt"
            android:drawableLeft="@drawable/ic_cloud_queue_black_24dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:padding="20dp"
            android:text="Update URL" />

        <TextView
            android:id="@+id/xml_txt_updatekey"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/drw_curve_txt"
            android:drawableLeft="@drawable/ic_cloud_queue_black_24dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:padding="20dp"
            android:text="Update  KEY" />

        <TextView
            android:id="@+id/xml_txt_updatenumber"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/drw_curve_txt"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:padding="20dp"
            android:text="Update Number" />






<android.support.design.widget.FloatingActionButton
    android:id="@+id/xml_flt_apikey_qr"
    app:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginRight="10dp"
    android:layout_marginTop="50dp"
    android:src="@drawable/ic_qr_code"
    app:backgroundTint="#d8e1dede"/>


    </LinearLayout>

    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="40dp"
        android:text="API: "/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="url://"
        android:textColor="@android:color/white" />
</RelativeLayout>
